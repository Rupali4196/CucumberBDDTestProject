<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>Test1Project</groupId>
  <artifactId>Test1Project</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <dependencies>
  <!-- WebDriverManager [io.github.bonigarcia » webdrivermanagerApache] -->
  <!-- https://mvnrepository.com/artifact/io.github.bonigarcia/webdrivermanager -->
<dependency>
    <groupId>io.github.bonigarcia</groupId>
    <artifactId>webdrivermanager</artifactId>
    <version>6.3.2</version>
</dependency>

  <!-- selenium java [org.seleniumhq.selenium » selenium-java]-->
  <!-- https://mvnrepository.com/artifact/org.seleniumhq.selenium/selenium-java -->
<dependency>
    <groupId>org.seleniumhq.selenium</groupId>
    <artifactId>selenium-java</artifactId>
    <version>4.38.0</version>
</dependency>
   <!-- cucumber java [io.cucumber » cucumber-java]-->
   <!-- https://mvnrepository.com/artifact/io.cucumber/cucumber-java -->
<dependency>
    <groupId>io.cucumber</groupId>
    <artifactId>cucumber-java</artifactId>
    <version>7.31.0</version>
</dependency>

<!-- cucumber JUnit [io.cucumber » cucumber-junit]-->
<!-- https://mvnrepository.com/artifact/io.cucumber/cucumber-junit -->
<dependency>
    <groupId>io.cucumber</groupId>
    <artifactId>cucumber-junit</artifactId>
    <version>7.31.0</version>
    <scope>test</scope>
</dependency>

<!-- Extent Report -->
<dependency>
    <groupId>com.aventstack</groupId>
    <artifactId>extentreports</artifactId>
    <version>5.1.1</version>
</dependency>

<!-- Cucumber Extent Adapter -->
<dependency>
    <groupId>tech.grasshopper</groupId>
    <artifactId>extentreports-cucumber7-adapter</artifactId>
    <version>1.9.2</version>
</dependency>

  </dependencies>
  
   <build>
        <plugins>

            <!-- Maven Surefire Plugin: To run Cucumber + JUnit Tests -->
            <plugin>
                 <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-surefire-plugin</artifactId>
          <version>3.5.4</version>
                <configuration>
                <testFailureIgnore>true</testFailureIgnore>
                    <includes>     
                                     
                        <include>**/*TestRun.java</include>
                    </includes>
                </configuration>
            </plugin>

        </plugins>
    </build>
</project>